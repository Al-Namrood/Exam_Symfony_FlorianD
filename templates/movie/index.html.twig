{% extends 'base.html.twig' %}

{% block title %}Hello MovieController!{% endblock %}

{% block body %}
    <section class=" mt-5">
        {% if movies|length <= 0 %}
            <p class="p-5">Aucuns films pour le moment !</p>
        {% else %}
            {% for movie in movies %}
                <article class=" mt-3">
                    <h2>{{ movie.name }}</h2>
                    <p class="font-weight-bold">Genre: {{ movie.type }}</p>

                    <div class="content">
                        <img src="{{ movie.img }}" alt="Affiche du film {{ movie.name }}" class="w-25">
                        <div class="metadata mt-2">Ecrit le {{ movie.date | date('d/m/Y') }}</div>
                        <a href="{{ path("get_movie", {'id': movie.id}) }}" class="btn btn-info">Voir ce film</a>
                    </div>

                </article>
            {% endfor %}
        {% endif %}
    </section>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <article class="articles mt-3">
        <h2>{{ movie.name }}</h2>
        <p class="font-weight-bold">Genre: {{ movie.type }}</p>

                <div class="content mt-4">
                    <img src="{{ movie.img }}" alt="" class="w-25">
                    <p class="mt-3">Sortie le {{ movie.date | date("d:m:Y") }}</p>
                    <p class="mt-3">{{ movie.synopsis }} </p>
                </div>

    </article>
{% endblock %}